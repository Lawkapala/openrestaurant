{#
/**
 * @file
 * Template to display a Menu in Teaser mode.
 */
#}
{% extends 'node.html.twig' %}

{% block content %}
  <div{{ content_attributes.addClass('row') }}>

    <div class="col-xs-4">
      <div class="menu__images">
        {{ content.field_menu_images[0] }}
      </div>
    </div>

    <div class="col-xs-8">
        <h3 class="menu__title">
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h3>

      {{ content.field_menu_teaser }}

      <div class="menu__nutrition-types">
        {{ content.field_menu_nutrition_types }}
      </div>
    </div>
  </div>
{% endblock %}
